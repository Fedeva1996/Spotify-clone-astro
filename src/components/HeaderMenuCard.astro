---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, title, color, cover, artists } = playlist;

const artistsString = artists.join(", ");
---

<a
  href={`/playlist/${id} alternative`}
  class="playlist-item transition-all duration-300 flex relative overflow-hidden items-center gap-4 rounded-md bg-white/10 hover:bg-white/30 pr-4 min-w-64"
  transition:name=`playlist ${id} box alternative`
>
  <picture class="w-12 h-12 flex-none">
    <img
      src={cover}
      alt={`Cover de ${title} por ${artistsString}`}
      class="w-full h-full object-cover"
      transition:name=`playlist ${id} image alternative`
    />
  </picture>
  <div class="flex flex-auto flex-col truncate">
    <h4
      class="font-semibold text-lgt text-white"
      transition:name=`playlist ${id} text alternative`
    >
      {title}
    </h4>
    <h4
      class="hidden"
      transition:name=`playlist ${id} artists alternative`
    >
      {title}
    </h4>
  </div>
</a>
