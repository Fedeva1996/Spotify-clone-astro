---
import AsideMenuItem from "./AsideMenuItem.astro";
import SideMenuCard from "./AsideMenuCard.astro";

import Library from "@/icons/library.astro";
import Search from "@/icons/search.astro";
import Home from "@/icons/home.astro";
import Plus from "@/icons/plus.astro";
import Arrow from "@/icons/arrow.astro";

import { playlists } from "@/lib/data";
---

<nav class="flex flex-col flex-1 text-[#b3b3b3] gap-2">
  <ul class="flex flex-col gap-2 py-3 px-4 bg-[#121212] rounded-lg">
    <AsideMenuItem title="Inicio" href="/">
      <Home />
    </AsideMenuItem>
    <AsideMenuItem title="Buscar" href="/search">
      <Search />
    </AsideMenuItem>
  </ul>
  <div class="flex flex-col flex-1 gap-2 py-3 px-4 bg-[#121212] rounded-lg">
    <header class="flex flex-col justify-between">
      <ul class="">
        <AsideMenuItem title="Tu biblioteca" href="">
          <Library />
        </AsideMenuItem>
      </ul>
      <div class="flex flex-col gap-2 overflow-y-auto">
        {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
      </div>
    </header>
  </div>
</nav>
